<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        style="@style/TitleStyle"
        android:text="程序锁"/>
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="5dp">
        <Button 
            android:id="@+id/btn_unlock"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="未加锁"
            android:textColor="#fff"
            android:background="@drawable/tab_left_pressed"/>
        <Button 
            android:id="@+id/btn_lock"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="已加锁"
            android:textColor="#fff"
            android:background="@drawable/tab_right_default"
            />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/ll_unlock"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        >
        <TextView 
            android:id="@+id/tv_unlock_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="未加锁程序"
            android:textSize="18sp"/>
        <ListView 
            android:id="@+id/lv_unlock_list"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
        ></ListView>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/ll_lock"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone"
        >
        <TextView 
            android:id="@+id/tv_lock_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="已加锁程序"
            android:textSize="18sp"/>
        <ListView 
            android:id="@+id/lv_lock_list"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
        ></ListView>
    </LinearLayout>

</LinearLayout>
