<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        style="@style/TitleStyle"
        android:text="手机防盗"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="安全号码"/>
        <TextView 
            android:id="@+id/tv_phone_number"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="5566"
            android:layout_alignParentRight="true"/>
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_phone_number"
            android:background="@drawable/listview_divider"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="防盗保护是否开启"/>
        <ImageView 
            android:id="@+id/iv_lock"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:background="@drawable/lock"
            android:layout_alignParentRight="true"/>
         <ImageView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_lock"
            android:background="@drawable/listview_divider"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>
    
	<TextView 
	    android:id="@+id/tv_reset_setup"
	    android:text="重新进入设置向导"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/selector_reset_setup_bg"/>
	<TextView 
	    android:text="功能简介"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:background="#ccc"
	    android:padding="5dp"/>

	<TextView 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="GPS追踪: #*location*#"
        android:drawableLeft="@android:drawable/star_big_on"
        android:gravity="center_vertical"/>
	
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="播放报警音乐: #*alarm*#"
        android:drawableLeft="@android:drawable/star_big_on"
        android:gravity="center_vertical"/>

	<TextView 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="远程数据销毁: #*wipedata*#"
        android:drawableLeft="@android:drawable/star_big_on"
        android:gravity="center_vertical"/>
	<TextView 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="远程锁屏: #*lockscreen*#"
        android:drawableLeft="@android:drawable/star_big_on"
        android:gravity="center_vertical"/>
    
</LinearLayout>
